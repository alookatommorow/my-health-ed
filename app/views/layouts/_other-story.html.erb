<% story.story_texts.each do |text| %>
	<div class="text-msg"><%=raw sanitize(simple_format(text.body), tags: %w(br p) ) %></div>
<% end %>

<%= link_to story_comments_path(story), class: "comment-link" do %>
	<%= fa_icon "comment-o" %><span> Comment</span>
<% end %>
<div class="comment-preview all">
	<div class="swipe-up">Swipe up to view all <%= story.comments.count %> comments</div>
	<% story.comments.each_with_index do |comment, index| %>
		<div class="comment-preview-item">
			<% if index < 3 %>
				<span class="username"><%= user_names[index] %></span><span> <%= comment.body %></span>
			<% else %>
				<span class="username">anonymouse</span><span> <%= comment.body %></span>
			<% end %>
		</div>
	<% end %>
</div>
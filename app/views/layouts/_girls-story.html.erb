<% story.story_texts.each do |text| %>
	<div class="text-msg"><%=raw sanitize(simple_format(text.body), tags: %w(br p) ) %></div>
<% end %>

<%= link_to story_comments_path(story), class: "comment-link" do %>
	<%= fa_icon "comment-o" %><span> Comment</span>
<% end %>
<div class="comment-preview">
	<%= link_to "View all 3 comments", story_comments_path(story)%>

	<% (1..2).each do |n| %>
		<div class="comment-preview-item">
			<span class="username"><%= user_names[n] %></span><span> <%= story.comments[n].body %></span>
		</div>
	<% end %>
</div>